<?xml version="1.0" encoding="UTF-8"?>
<Query>
	<movie>
		<getAllMovie>
			SELECT M.*
				   , G.GRADE_TITLE
				   , AC.ACTOR_COUNT
			FROM MOVIE M
				 , GRADE G
				 , (
				     SELECT MOVIE_ID
				     		, COUNT(ACTOR_LIST_ID) ACTOR_COUNT 
				     FROM ACTOR_LIST 
				     GROUP BY MOVIE_ID
				    ) AC 
			WHERE M.GRADE_ID = G.GRADE_ID 
			AND AC.MOVIE_ID(+) = M.MOVIE_ID
		</getAllMovie>
		<getOneMovieInfoByMovieId>
			/* Query 범위 주석 */
			SELECT 	M.*
				   	, G.GRADE_TITLE
			FROM 	MOVIE M
				 	, GRADE G
			WHERE 	M.GRADE_ID = G.GRADE_ID 
			AND	  	M.MOVIE_ID = ?
		</getOneMovieInfoByMovieId>
	</movie>
	
	<director>
		<getDirectorInfo>
			SELECT  DIRECTOR_NAME
			FROM    DIRECTED_MOVIE DM
			        , DIRECTOR D
			WHERE   DM.DIRECTOR_ID = D.DIRECTOR_ID
			AND     DM.MOVIE_ID = ?
		</getDirectorInfo>
	</director>
	
	<actor>
		<getActorInfo>
			SELECT	ACTOR_NAME
			FROM	ACTOR A
					, ACTOR_LIST AL
			WHERE	A.ACTOR_ID = AL.ACTOR_ID
			AND		AL.MOVIE_ID = ?	
		</getActorInfo>
		
		<insertNewActor>
			INSERT INTO ACTOR 	(
									ACTOR_ID
									, ACTOR_NAME
								)
			VALUES				(
									ACTOR_ID_SEQ.NEXTVAL
									, ?
								)
			
		</insertNewActor>
	</actor>
	
	<genre>
		<getGenreInfo>
			SELECT	GENRE_ID
					, GENRE TITLE
			FROM 	GENRE G
					, GENRE_LIST GL
			WHERE	GL.MOVIE_ID = ?
			AND		G.GENRE_ID = GL.GENRE.ID		
		</getGenreInfo>
	</genre>
</Query>




